{% extends 'base.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            
            {# Carte Bootstrap pour encadrer le formulaire #}
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0 text-center">Contactez-nous</h3>
                </div>
                
                <div class="card-body p-4">
                    
                    {# Affichage des messages de succès #}
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}

                    <p class="text-muted mb-4 text-center">
                        Une question ? Un problème ? Remplissez ce formulaire et nous vous répondrons rapidement.
                    </p>

                    {{ form_start(form) }}
                        
                        {# Les champs s'afficheront maintenant avec le style Bootstrap #}
                        <div class="mb-3">
                            {{ form_row(form.name, {'attr': {'placeholder': 'Jean Dupont'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.email, {'attr': {'placeholder': 'jean@exemple.com'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.message, {'attr': {'rows': 5, 'placeholder': 'Votre message ici...'}}) }}
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-send"></i> Envoyer mon message
                            </button>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}
