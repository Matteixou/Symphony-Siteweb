{% extends 'base.html.twig' %}

{% block title %}Contact - Mon E‑Shop{% endblock %}

{% block body %}
<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <h1 class="h4 text-uppercase fw-bold mb-4">Contact</h1>

        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                {{ form_start(form) }}

                    {# Affichage standard des champs avec Bootstrap 5 #}
                    {{ form_widget(form) }}

                    {# Bouton noir cohérent avec le reste du site #}
                    <button type="submit" class="btn btn-dark mt-3 w-100 text-uppercase fw-semibold">
                        Envoyer
                    </button>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
