{% extends 'base.html.twig' %}

{% block title %}Inscription - Mon E‑Shop{% endblock %}

{% block body %}
<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h1 class="h4 mb-3 text-center">Créer un compte</h1>

                {# Si ton contrôleur envoie un objet de formulaire nommé "registrationForm" #}
                {{ form_start(registrationForm) }}

                    {# Champs rendus avec le thème Bootstrap 5 #}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe'
                    }) }}

                    {# Exemple si tu as une case à cocher "conditions" #}
                    {% if registrationForm.agreeTerms is defined %}
                        {{ form_row(registrationForm.agreeTerms) }}
                    {% endif %}

                    <button type="submit" class="btn btn-primary w-100 mt-2">
                        S’inscrire
                    </button>
                {{ form_end(registrationForm) }}

                <p class="text-center mt-3 mb-0">
                    Déjà un compte ?
                    <a href="{{ path('app_login') }}">Se connecter</a>
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
