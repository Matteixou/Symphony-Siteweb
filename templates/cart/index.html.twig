{% extends 'base.html.twig' %}

{% block title %}Mon panier - Mon E‑Shop{% endblock %}

{% block body %}
<div class="mt-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-uppercase fw-bold mb-0">Votre panier</h1>
        {% if app.user %}
            <a href="{{ path('app_my_orders') }}" class="btn btn-outline-dark text-uppercase fw-semibold btn-hover-transition">
                Mes commandes
            </a>
        {% endif %}
    </div>

    {% if items | length > 0 %}
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body p-0">
                <table class="table align-middle mb-0">
                    <thead class="table-light text-uppercase small">
                        <tr>
                            <th>Produit</th>
                            <th>Prix unitaire</th>
                            <th>Quantité</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in items %}
                            <tr>
                                <td class="fw-semibold">{{ item.product.name }}</td>
                                <td>{{ item.product.price }} €</td>
                                <td>{{ item.quantity }}</td>
                                <td>{{ item.product.price * item.quantity }} €</td>
                                <td class="text-end">
                                    <a href="{{ path('app_cart_remove', {'id': item.product.id}) }}" class="btn btn-sm btn-outline-danger text-uppercase btn-hover-transition">
                                        Supprimer
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <td colspan="3" class="text-end fw-semibold text-uppercase">Total global :</td>
                            <td colspan="2" class="fw-bold">{{ total }} €</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <a href="{{ path('app_home') }}" class="btn btn-outline-dark text-uppercase fw-semibold btn-hover-transition">
                Continuer mes achats
            </a>
            <a href="{{ path('app_order_create') }}" class="btn btn-dark text-uppercase fw-semibold btn-hover-transition">
                Valider et payer
            </a>
        </div>
    {% else %}
        <div class="alert alert-light border text-center">
            <p class="mb-2">Votre panier est vide.</p>
            <a href="{{ path('app_home') }}" class="btn btn-dark btn-sm text-uppercase fw-semibold mt-1 btn-hover-transition">
                Retourner à la boutique
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
