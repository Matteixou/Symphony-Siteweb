{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Votre panier</h1>
        {% if app.user %}
            <a href="{{ path('app_my_orders') }}" class="btn btn-outline-primary">
                Voir mes commandes passées
            </a>
        {% endif %}
    </div>

    {% if items | length > 0 %}
        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Prix unitaire</th>
                            <th>Quantité</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in items %}
                            <tr>
                                <td>{{ item.product.name }}</td>
                                <td>{{ item.product.price }} €</td>
                                <td>{{ item.quantity }}</td>
                                <td>{{ item.product.price * item.quantity }} €</td>
                                <td class="text-end">
                                    <a href="{{ path('app_cart_remove', {'id': item.product.id}) }}" class="btn btn-sm btn-outline-danger">
                                        Supprimer
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-end"><strong>Total global :</strong></td>
                            <td colspan="2"><strong>{{ total }} €</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        <div class="mt-4 d-flex justify-content-between">
            <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">Continuer mes achats</a>
            <a href="{{ path('app_order_create') }}" class="btn btn-success">
                Valider et payer la commande
            </a>
        </div>
    {% else %}
        <div class="alert alert-info">
            Votre panier est vide.
            <br>
            <a href="{{ path('app_home') }}" class="btn btn-primary btn-sm mt-2">Retourner à la boutique</a>
        </div>
    {% endif %}
</div>
{% endblock %}
