{% extends 'base.html.twig' %}

{% block title %}Accueil - Mon E-shop{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-center">Nos Nouveautés</h1>

    <div class="row">
        {% for product in products %}
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <!-- Image fictive pour l'instant -->
                    <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                        <span class="text-muted">{{ product.image ? product.image : 'Photo' }}</span>
                    </div>
                    
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text text-truncate">{{ product.description }}</p>
                        <h4 class="text-primary">{{ product.price }} €</h4>
                        <a href="#" class="btn btn-dark w-100 mt-2">Ajouter au panier</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="text-center">Aucun produit trouvé.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
