{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <h1 class="h4 text-uppercase fw-bold mb-4">Mon profil</h1>

        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                {{ form_start(form) }}

                <h2 class="h6 text-uppercase fw-bold mb-3">Informations du compte</h2>
                {{ form_row(form.email) }}

                <hr class="my-4">

                <h2 class="h6 text-uppercase fw-bold mb-3">Modifier mon mot de passe</h2>
                <p class="text-muted small mb-3">
                    Laisse ces champs vides si tu ne souhaites pas changer ton mot de passe.
                </p>
                {{ form_row(form.passwordChange.oldPassword) }}
                {{ form_row(form.passwordChange.newPassword.first) }}
                {{ form_row(form.passwordChange.newPassword.second) }}

                <button type="submit" class="btn btn-dark w-100 mt-3 text-uppercase fw-semibold">
                    Enregistrer les modifications
                </button>

                {{ form_end(form) }}

                <hr class="mt-4">
                <a href="{{ path('app_logout') }}" class="btn btn-outline-danger w-100 text-uppercase fw-semibold">
                    Se d√©connecter
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
