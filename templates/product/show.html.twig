{% extends 'base.html.twig' %}

{% block title %}Détail du produit{% endblock %}

{% block body %}
    <h1 class="mb-4">Détail du produit</h1>

    <table class="table table-striped align-middle w-auto">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ product.price }} €</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex gap-2 mt-3">
        <a href="{{ path('app_product_index') }}" class="btn btn-secondary">
            ← Retour à la liste
        </a>

        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-primary">
            Modifier
        </a>

        {{ include('product/_delete_form.html.twig') }}
    </div>
{% endblock %}
