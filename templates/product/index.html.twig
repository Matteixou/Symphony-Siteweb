{% extends 'base.html.twig' %}

{% block title %}Boutique - Mon E‑Shop{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-uppercase fw-bold mb-0">Tous les produits</h1>

        {# Bouton visible seulement pour les admins #}
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_product_new') }}" class="btn btn-dark text-uppercase fw-semibold btn-hover-transition">
                + Ajouter un produit
            </a>
        {% endif %}
    </div>

    {% if products is not empty %}
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            {% for product in products %}
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm card-hover">
                        <div class="bg-light d-flex align-items-center justify-content-center" style="height: 220px;">
                            <span class="text-muted text-uppercase small">
                                {{ product.image ? product.image : 'Image produit' }}
                            </span>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-uppercase fw-bold mb-1">{{ product.name }}</h5>
                            <p class="card-text text-muted small flex-grow-1">
                                {{ product.description|default('')|length > 100
                                    ? product.description|slice(0, 100) ~ '...'
                                    : product.description }}
                            </p>
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <span class="fw-bold fs-5">{{ product.price }} €</span>
                                <a href="{{ path('app_cart_add', {'id': product.id}) }}" class="btn btn-sm btn-outline-dark text-uppercase fw-semibold btn-hover-transition">
                                    Ajouter au panier
                                </a>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0 d-flex justify-content-between pt-0">
                            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-sm btn-link text-dark text-uppercase fw-semibold">
                                Détails
                            </a>
                            <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-sm btn-link text-muted text-uppercase fw-semibold">
                                Modifier
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p class="text-muted">Aucun produit pour le moment.</p>
    {% endif %}
{% endblock %}
